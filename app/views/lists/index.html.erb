<div class="cover d-flex mb-4 align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<div class="container py-5">

  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a new movie list",new_list_path, class: "btn btn-primary"%>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
            <div class="card-category" data-aos="zoom-in" >
              <%= list.name %>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>

</div>

